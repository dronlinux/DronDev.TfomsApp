@{
    ViewData["Title"] = "Пациенты";
}

<table id="idPatientsList">
</table>

<div id="editPartial"></div>

<div class="modal" tabindex="-1" role="dialog" id="createModal">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Добавить пациента</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="frmCreate" method="post">
                    <div class="form-row">
                        <div class="form-group col-md-6 mb-3">
                             <label for="textFam">Фамилия:</label>
                            <input class="form-control form-control-sm" id="textFam" type="text" placeholder="Фамилия" name="Fam"/>
                        </div>
                        <div class="form-group col-md-6 mb-3">
                            <label for="textIm">Имя:</label>
                            <input class="form-control form-control-sm" id="textIm" type="text" placeholder="Имя" name="im" />
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6 mb-3">
                            <label for="textOt">Отчество</label>
                            <input class="form-control form-control-sm" id="textOt" type="text" placeholder="Отчество" name="Ot"/>
                        </div>
                        <div class="form-group col-md-6 mb-3">
                            <label for="dateDr">Дата рождения:</label>
                            <input  class="form-control form-control-sm" id="dateDr" name="Dr"/>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6 mb-3">
                            <label for="choiceSex">Пол:</label>
                            <input class="form-control form-control-sm" id="choiceSex" type="text" placeholder="Пол(1-Мужской/0-Женский)" name="sex"/>
                        </div>
                       
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Отмена</button>
                <button type="button" class="btn btn-primary" id="btnCreate">Добавить</button>
            </div>
        </div>
    </div>
</div>


