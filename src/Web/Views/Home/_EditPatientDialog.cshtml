@model DronDev.TestApp.Web.ViewModels.PatientEditViewModel
    <div class="modal" tabindex="-1" role="dialog" id="editModal">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Редактирование</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form id="frmEdit" method="put">
                        <div class="form-row">
                            <div class="form-group col-md-6 mb-3">
                                <label asp-for="fam"></label>
                                <input asp-for="fam" class="form-control form-control-sm" />
                            </div>
                            <div class="form-group col-md-6 mb-3">
                                <label asp-for="im"></label>
                                <input asp-for="im" class="form-control form-control-sm" />
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6 mb-3">
                                <label asp-for="ot"></label>
                                <input asp-for="ot" class="form-control form-control-sm" />
                            </div>
                            <div class="form-group col-md-6 mb-3">
                                <label asp-for="dr"></label>
                                <input asp-for="dr" class="form-control form-control-sm" />
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6 mb-3">
                                <label asp-for="sex"></label>
                                <input asp-for="sex" class="form-control form-control-sm" />
                            </div>
                           
                        </div>
                        <div class="form-row">
                           <div class="form-group col-md-6 mb-3">
                                <input asp-for="IdentId" type="hidden" />
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Отмена</button>
                    <button type="button" class="btn btn-primary" id="btnUpdate">Обновить</button>
                </div>
            </div>
        </div>
    </div>